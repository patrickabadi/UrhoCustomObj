<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:UrhoCustomObj"
             x:Class="UrhoCustomObj.MainPage">

  <ContentPage.Content>
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="*"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
      </Grid.RowDefinitions>

      <local:UrhoView x:Name="UrhoView" Grid.RowSpan="3"/>

      <Button x:Name="ColouredButton" Grid.Row="1" Text="Coloured" Clicked="ColouredButton_Clicked"/>
      <Button x:Name="TexturedButton" Grid.Row="2" Text="Textured" Clicked="TexturedButton_Clicked"/>

    </Grid>
  </ContentPage.Content>

</ContentPage>
